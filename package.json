    "url": "https://github.com/DavidJamesPugh/HexaForge/issues"
  },
  "homepage": "https://github.com/DavidJamesPugh/HexaForge#readme",
  "devDependencies": {
    "express": "^4.18.2",
    "http-server": "^14.1.1",
    "nodemon": "^3.1.10"
  },
  "dependencies": {
    "handlebars": "^4.7.8"
  }
